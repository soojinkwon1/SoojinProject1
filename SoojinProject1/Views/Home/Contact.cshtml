@{
    ViewData["Title"] = "Contact";
}
<!DOCTYPE html>
<html>


        <section class="portfolio-block hire-me">
            <div class="container">
                <div class="heading">
                    <h2>contact</h2>
                </div>
                <form>
                    <div class="mb-3"><label class="form-label" for="subject">Name</label><input class="form-control" type="email" id="email-1"><label class="form-label" for="subject">Subject</label><input class="form-control" type="email" id="email-2"></div>
